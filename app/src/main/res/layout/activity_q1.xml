<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vedantgote.quizapp.Q1"
    android:background="@drawable/bkshp">

    <TextView
        android:id="@+id/qn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="88dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/shp"
        android:gravity="center"
        android:text="Who is the most recent Indian Cricketer to take a hatrick?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/an4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nm"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/nm"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/cshp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/an1"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/shp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Y. Chahal"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/an3"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/an2"
        android:layout_width="0dp"
        android:layout_height="35dp"

        android:layout_marginBottom="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="K. Yadav"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/an4"
        app:layout_constraintLeft_toRightOf="@+id/an1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/an3"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/shp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="B. Kumar"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tim"
        app:layout_constraintLeft_toLeftOf="@+id/an1"
        app:layout_constraintRight_toRightOf="@+id/an1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/an4"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/shp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="J. Bumrah"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/an3"
        app:layout_constraintLeft_toLeftOf="@+id/an2"
        app:layout_constraintRight_toRightOf="@+id/an2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/tim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/cshp"
        android:gravity="center"
        android:text="10"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
